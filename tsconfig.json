{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "outDir": "lib-esm",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "lib-esm",
    "src/**/__tests__",
  ]
}